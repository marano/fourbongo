<div id='settingsContainer'>
  <div class='settingsSection'>
    <h3>Time range</h3>
    <div  id='currentTimeRangeLabel'></div>
    <input id='currentTimeRangeSlider' type='range' min='0' />
  </div>

  <div class='settingsSection'>
    <h3>Sorting order</h3>
    <form>
      <input id='sortByPublication' type='radio' name='sorting' value='publication' /><label for='sortByPublication'>Publication</label>
      <input id='sortByRandom' type='radio' name='sorting' value='random' /><label for='sortByRandom'>Random</label>
    </form>
  </div>

  <div class='settingsSection'>
    <h3>Location based tweets</h3>
    <input id='fetchLocationBasedTweets' type='checkbox' /><label id='fetchLocationBasedTweetsLabel' for='fetchLocationBasedTweets'>Show in</label>
    <div  id='currentLocationBasedTweetsDistanceRangeLabel'></div><input id='currentLocationBasedTweetsDistanceRangeSlider' type='range' />
  </div>
</div>
